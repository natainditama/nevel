{
  "extends": "next/core-web-vitals",
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "no-debugger": "warn",
    "no-unused-expressions": "warn",
    "no-undef": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    "build/",
    "public/",
    "static/",
    "next.config.js"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  }
}
